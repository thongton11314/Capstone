@using CapstoneApp.Models
@model LoginViewModel

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/styles/css/loginandregister.css" />
</head>

<h2>@ViewBag.Title.</h2>
<html>
<body class="login-bg"> 
    <main>
        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @id = "login-form", @class = "form-class", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>Use a local account to log in.</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="container">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "field-class", @placeholder = "Email", @autofocus = "true" })

                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password, new { @class = "field-class", @placeholder = "Password", @autofocus = "true" })
                <br>
                @Html.CheckBoxFor(m => m.RememberMe)
                @Html.LabelFor(m => m.RememberMe)
                <button class="submit-class" type="submit" value="Log in">Log-in</button>
            </div>

            <div class="info-div">
                <p>
                    @Html.ActionLink("Register as a new user", "Register")
                </p>
            </div>
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>
        }
    </main>
</body>
</html>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
